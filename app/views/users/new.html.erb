<main>
  <div class="content-wrapper">
    <h1><%= translate('signup') %></h1>
    <% if(@user.errors.any?) %>
      <div class="form__error">
        <%= @user.errors.full_messages.join('<br />').html_safe %>
      </div>
    <% end %>
    <%= form_for(@user) do |form| %>
      <div class="input__row">
        <%= form.label(:email, class: 'input__label') %>
        <%= form.text_field(:email, placeholder: 'e.g. me@epfl.ch', class: 'input__field') %>
      </div>
      <div class="input__row">
        <%= form.label(:password, class: 'input__label') %>
        <%= form.password_field(:password, class: 'input__field') %>
      </div>
      <div class="input__row">
        <div class="prompt">
          <%= form.submit(translate('signup'), class: "btn") %>
        </div>
      </div>
    <% end %>
  </div>
</main>
